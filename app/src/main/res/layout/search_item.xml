<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/search_track_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/dimen8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Title"
        android:layout_marginStart="@dimen/dimen12"
        app:layout_constraintBottom_toBottomOf="@+id/search_track_image"
        app:layout_constraintStart_toEndOf="@+id/search_track_image"
        app:layout_constraintTop_toTopOf="@+id/search_track_image" />

</androidx.constraintlayout.widget.ConstraintLayout>