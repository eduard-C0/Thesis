<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_track_container"
    android:layout_marginHorizontal="@dimen/dimen12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_track_cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dimen8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_track_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/track_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/top_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:fontFamily="@font/montserrat_regular"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/top_track_cardview"
        app:layout_constraintStart_toStartOf="@+id/top_track_cardview"
        app:layout_constraintTop_toBottomOf="@+id/top_track_cardview" />

</androidx.constraintlayout.widget.ConstraintLayout>